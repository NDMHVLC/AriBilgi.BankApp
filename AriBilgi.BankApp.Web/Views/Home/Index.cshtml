@using AriBilgi.BankApp.Web.Data.Entities
@using AriBilgi.BankApp.Web.Models
@model List<ApplicationUserDTO>
@{
    Layout = "~/views/Shared/_Layout.cshtml";
}



<table class="mt-4 table table-hover table-bordered table-sm">

    <thead>
        <tr>
            <td>Name</td>
            <td>Surname</td>
            <td>Account Count</td>
            <td><a href="/Home/CreateUser" class="btn btn-primary btn-sm">Yeni Kullanıcı Ekle</a></td>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (ApplicationUserDTO item in Model)
            {
                <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td><span class="badge bg-danger">@item.AccountCount</span></td>
                <td><a href="/Account/Index?UserId=@item.Id" class="btn btn-sm btn-success">Hesap Ekle</a></td>
                </tr>
                
            }
        }
    </tbody>
</table>
